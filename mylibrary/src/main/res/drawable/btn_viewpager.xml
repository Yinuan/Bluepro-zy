<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Corner的属性是设置圆角的半径的-->
    <corners
        android:bottomLeftRadius="21dp"
        android:bottomRightRadius="21dp"
        android:radius="1dp"
        android:topLeftRadius="21dp"
        android:topRightRadius="21dp" />
    <!-- Button里面的文字与Button边界的间隔-->
    <solid android:color="#ffffff" />
    <gradient android:type="linear"
        android:startColor="#4cd3f0"
        android:endColor="#4cd3f0"
        android:angle="0"></gradient>
    <!--
    topLeftRadius 左上角半径
    topRightRadius 右上角
    -->
</shape>