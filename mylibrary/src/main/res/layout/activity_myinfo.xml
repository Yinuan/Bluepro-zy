<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/edit_bg" >

    <include layout="@layout/top_menu_style"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/my_account"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/my_account"
                android:textColor="@color/text_color"
                android:textSize="@dimen/my_item_text_size2" >
            </TextView>

            <TextView
                android:id="@+id/my_account_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_two"
                android:textSize="@dimen/my_item_text_size2" >
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/edit_bg"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/my_school"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
               android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/my_school"
                android:textColor="@color/text_color"
                android:textSize="@dimen/my_item_text_size2" >
            </TextView>

            <TextView
                android:id="@+id/my_school_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_two"
                android:textSize="@dimen/my_item_text_size2" >
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/edit_bg"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/room_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/my_room_number"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/my_room_number"
                android:textColor="@color/text_color"
                android:textSize="@dimen/my_item_text_size2" >
            </TextView>

            <TextView
                android:id="@+id/my_room_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/lightgray"
                android:textSize="@dimen/my_item_text_size2" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/save_userinfo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_name"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/my_item_text_size2" >
                </TextView>

                <EditText
                    android:layout_alignParentRight="true"
                    android:textColorHint="@color/lightgray"
                    android:id="@+id/my_name_txt"
                    android:layout_width="200dp"
                    android:maxLength="10"
                    android:hint="@string/hint_name"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/my_item_text_size2" >
                </EditText>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/edit_bg"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_sex"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/sex"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/my_item_text_size2" >
                </TextView>

                <RadioGroup
                    android:layout_alignParentRight="true"
                    android:id="@+id/sex_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/man_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radiobtn_selector"
                        android:padding="5dp"
                        android:text="男"
                        android:textColor="@color/txt_two"
                        android:textSize="@dimen/my_item_text_size2" />

                    <RadioButton
                        android:id="@+id/woman_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/radiobtn_selector"
                        android:padding="5dp"
                        android:text="女"
                        android:textColor="@color/txt_two"
                        android:textSize="@dimen/my_item_text_size2" />
                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/edit_bg"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_idcard"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/my_info_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/IDcard"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/my_item_text_size2" >
                </TextView>

                <EditText
                    android:layout_toRightOf="@+id/my_info_idcard"
                    android:singleLine="true"
                    android:id="@+id/my_idcard_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:maxLength="18"
                    android:hint="@string/hint_IDcard"
                    android:textColorHint="@color/lightgray"
                    android:layout_alignParentRight="true"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:layout_marginRight="5dp"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/my_item_text_size2" >
                </EditText>
            </RelativeLayout>


            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/blue_red_btn_selecter"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>