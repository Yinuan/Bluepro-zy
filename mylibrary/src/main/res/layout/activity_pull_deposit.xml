<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

 <include layout="@layout/top_menu_style"/>
    <LinearLayout
        android:layout_width="match_parent"
      android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="返款支付宝账号"
            android:textColor="@color/txt_one"/>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/return_txt_acount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@drawable/text_bg_1"
            android:textColor="@color/txt_three"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="请核实是否本人账号"
            android:textColor="#ff9c47"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/edit_bg"/>
    <RelativeLayout
        android:id="@+id/deposit_layout"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="72dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_one"
            android:textSize="18sp"
            android:text="设备"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/deposit_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/txt_two"
            android:hint="请选择"
           android:drawableRight="@drawable/pull_down"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/edit_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_marginTop="5dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/pull_despoit_monney_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:layout_marginLeft="5dp"
            android:textColor="@color/base_color"
            android:textSize="32sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_two"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:text="@string/card_deposit_pull1"/>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_two"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:text="@string/card_deposit_pull2"/>


    <Button
        android:id="@+id/deposit_pull_cancle"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_btn_selecter"
        android:text="不退了"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <Button
        android:id="@+id/deposit_pull_btn"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_btn_select_2"
        android:text="仍然退"
        android:textColor="@color/base_color"
        android:textSize="16sp" />
</LinearLayout>  
