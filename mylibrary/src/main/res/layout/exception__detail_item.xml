<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/exception_item_height"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <ImageView
        android:id="@+id/exception_device_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:src="@drawable/bluetooth_icon" >
    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/exception_device_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/my_account"
            android:textColor="@color/text_color"
            android:textSize="@dimen/my_item_text_size" >
        </TextView>

        <TextView
            android:id="@+id/exception_time_txt"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/my_account"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/my_item_text_size" >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/exception_reason_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:text="@string/my_account"
        android:textColor="@color/red"
        android:textSize="@dimen/my_item_text_size" >
    </TextView>

</LinearLayout>