<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_bg"
    android:orientation="vertical" >

    <include layout="@layout/top_menu_style"/>


    <TextView
        android:id="@+id/xizao_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/finish"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:text="@string/xizao_finish"
        android:textColor="@color/text_color"
        android:textSize="@dimen/title_back_text_size" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/xcrount_white_10"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recharge_bill_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/finish_time"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
            <TextView
                android:id="@+id/finish_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recharge_bill_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/withhold_amount"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
            <TextView
                android:id="@+id/withhold_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recharge_bill_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/consume_amount"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
            <TextView
                android:id="@+id/consume_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recharge_bill_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/return_amount"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
            <TextView
                android:id="@+id/return_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>