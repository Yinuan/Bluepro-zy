<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_bg"
    android:orientation="vertical">

    <include layout="@layout/top_menu_style"/>


    <TextView
        android:id="@+id/xizao_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/finish"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:text="洗衣完成"
        android:textColor="@color/text_color"
        android:textSize="@dimen/title_back_text_size" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/xcrount_white_10"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"

      >

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recharge_bill_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/finish_time"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />

            <TextView
                android:id="@+id/finish_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recharge_bill_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/washing_model"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />

            <TextView
                android:id="@+id/withhold_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/recharge_bill_normal"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/consume_amount"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />

            <TextView
                android:id="@+id/consume_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/title_back_text_size" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/edit_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/txt_two"
            android:text="请及时取走您的衣物，谢谢使用!"/>
    </LinearLayout>


</LinearLayout>  
