<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rentlayout_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/rent_shenhe"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="审核中"
            android:layout_marginLeft="6dp"
            android:textColor="@color/text_color"/>
    </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_two"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                android:text="@string/rent4_hint1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_two"
        android:textSize="15sp"
        android:text="@string/rent4_hint2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>


    <Button
        android:id="@+id/rent4_submitBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/login_btn_selecter"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>