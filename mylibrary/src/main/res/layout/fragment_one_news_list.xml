<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

   <LinearLayout
       android:visibility="gone"
       android:id="@+id/one_news_layout1"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:minHeight="100dp"
       android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="100dp"
               android:minHeight="100dp"
               android:layout_marginLeft="15dp"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/one_news_title"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1.5"
                   android:gravity="center_vertical"
                   android:textColor="@color/result_view"
                   android:singleLine="true"
                   android:textSize="16sp"
                   android:textStyle="bold"
                   android:text=""/>
               <TextView
                   android:id="@+id/one_news_content"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:textColor="@color/txt_two"
                   android:singleLine="true"
                   android:ellipsize="end"
                   android:textSize="15sp"
                   android:text=""/>

               <TextView
                   android:id="@+id/one_news_time"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="0.8"
                   android:textColor="@color/txt_three"
                   android:singleLine="true"
                   android:textSize="14sp"
                   android:text="" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="100dp">
               <ImageView
                   android:id="@+id/one_news_icon"
                   android:src="@mipmap/msg_deafult"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:padding="10dp"/>
           </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/one_news_layout2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
       android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/one_news_title2"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/result_view"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="--"
            />
        <ImageView
            android:layout_marginTop="6dp"
            android:id="@+id/one_news_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/msg_big_deafult"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/one_news_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/one_news_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/result_view"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text=""/>
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/one_news_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_two"
            android:textSize="15sp"
            android:text=""/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/one_news_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_three"
            android:singleLine="true"
            android:textSize="14sp"
            android:text="" />

    </LinearLayout>

</LinearLayout>