<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="45dp"
    android:id="@+id/user_decive_layout"
    android:background="@color/white"
    android:paddingLeft="13dp"
    android:paddingRight="17dp" >

    <ImageView
        android:id="@+id/bluetooth_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/bluetooth_icon" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bind_btn"
        android:layout_toRightOf="@+id/bluetooth_icon"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingRight="5dp" >
        
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/my_item_text_size" >
        </TextView>
        
        <TextView
            android:id="@+id/mac_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/lightgray"
            android:textSize="12sp" >
        </TextView>
        
    </LinearLayout>

    <Button
        android:id="@+id/bind_btn"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_btn2_selecter"
        android:textColor="@color/white"
        android:textSize="@dimen/my_item_text_size" >
    </Button>

</RelativeLayout>